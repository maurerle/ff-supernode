[Unit]
Description=A watchdog to find unwanted batman gateways
Wants=network.target
After=network.target
Requires=network-online.target

[Service]
User=auto
WorkingDirectory=/home/auto/autosegmenter
ExecStart=/home/auto/autosegmenter/watchdog.py
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ff-batman-watchdog
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
